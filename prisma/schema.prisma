generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  firstName      String?
  lastName       String?
  email         String    @unique
  password       String   @db.VarChar
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  @@map("user")
}

model Job {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  location    String?
  salary      String?
  category    String?
  jobType     String?
}

